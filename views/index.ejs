<!DOCTYPE html>
<html>
  <head>

  <meta charset="utf-8">
  <title><%= info.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= info.description %>" />
  <meta name="author" content="">
  <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,700|Open+Sans+Condensed:300,700" rel="stylesheet" />
  <link rel="stylesheet" href="stylesheets/style.css" />

  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
      <script src="lib/html5shiv/html5shiv.js"></script>
  <![endif]-->

  <!-- Fav and touch icons -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="icons/apple-touch-icon-144-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="icons/apple-touch-icon-114-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="icons/apple-touch-icon-72-precomposed.png">
  <link rel="apple-touch-icon-precomposed" href="icons/apple-touch-icon-57-precomposed.png">
  <link rel="shortcut icon" href="icons/favicon.png">

</head>
<body class="left-sidebar" ng-app="ReaderApp" >
  <div id="wrapper">
    <div id="title-bar">
      <div class="toggle" onclick="$('#sidebar').toggle();"></div>
      <div class="title">
        <h1><%= info.name %></h1>
      </div>
    </div>
    <div id="content">
      <div id="content-inner" ng-view>
      </div>
    </div>

    <div id="sidebar" ng-controller="SidebarCtrl">
      <div id="logo">
        <h1><a href="javascript:
(function(){RDR_REALM='<%= realm %>';RDR_SCR=document.createElement('SCRIPT');
RDR_SCR.type='text/javascript';RDR_SCR.src=RDR_REALM+'/javascripts/bookmarklet.js';
document.getElementsByTagName('head')[0].appendChild(RDR_SCR)})();"
            onclick="return false;" title="Drag me in your toolbar!">not read it</a></h1>
      </div>

      <nav class="main">
        <ul>
          <li ng-class="{current: $root.currentPage == 'global'}" >
          <i class="icon-th icon-white"></i>
          <a href="#timeline/global" class="menu-global-timeline">
            All items <span class="badge">{{globalSize}}</span>
          </a>
          </li>
          <li ng-class="{current: $root.currentPage == 'archive'}" >
          <i class="icon-bookmark icon-white"></i>
          <a href="#timeline/archive" class="menu-archive-timeline" >
            Saved items <span class="badge">{{archiveSize}}</span>
          </a>
          </li>
          <li ng-class="{current: $root.currentPage == 'manage'}">
          <i class="icon-wrench icon-white"></i>
          <a href="#manage" class="menu-manage">Manage</a>
          </li>
        </ul>
      </nav>

      <!-- Search -->
      <section class="is-search" style="display: none;">
        <form method="post" action="#">
          <input type="text" class="text" name="search" placeholder="Search" />
        </form>
      </section>

      <!-- Subscriptions -->
      <nav class="is-subscriptions">
        <header>
          <h2>
            Subscriptions ({{ timelines.length - 2 }})
            <a href="/subscription/export" target="_blank" title="Export my feeds" style="float: right;">
              <i class="icon-download"></i>
            </a>
          </h2>
        </header>
        <ul>
          <li ng-repeat="timeline in timelines | filter:isSubscription | orderBy:'-size'" ng-class="{current: $root.currentPage == timeline.feed.id}">
          <a href="#timeline/{{ timeline.feed.id }}" title="{{ timeline.feed.title }}" >
            <div>{{ timeline.feed.title }}</div>
            <span class="badge" ng-show="timeline.size">{{ timeline.size }}</span>
          </a>
          </li>
        </ul>
      </nav>

      <!-- Copyright -->
      <div id="copyright">
        <p>&copy; 2013 NUNUX.org</p>
      </div>
    </div><! -- end sidebar -->
  </div><!-- end wrapper -->
</div>

<script src="lib/jquery/jquery.min.js"></script>
<script src="lib/moment/moment.min.js"></script>
<script src="lib/humane-js/humane.min.js"></script>
<script src="lib/angular/angular.min.js"></script>
<script src="lib/angular-sanitize/angular-sanitize.min.js"></script>
<script src="lib/ngUpload/ng-upload.min.js"></script>

<script src="javascripts/app.js"></script>
<script src="javascripts/modules/sidebar.js"></script>
<script src="javascripts/modules/timeline.js"></script>
<script src="javascripts/modules/manage.js"></script>

<script>
(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

ga('create', '<%= gaId %>', '<%= gaDomain %>');
ga('send', 'pageview');
</script>
</body>
</html>
